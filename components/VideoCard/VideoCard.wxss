.root {
  height: 220rpx;
  display: flex;
  padding: 30rpx 20rpx;
  margin: 30rpx;
  border-radius: 4px;
  box-shadow: 0px 0px 7px 6px rgba(0,0,0,0.07);
}
.img {
  width: 35%;
  height: 100%;
}
.img > image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.data {
  width: 65%;
  height: 100%;
  padding:0 30rpx;
  position: relative;
}
.num {
  position: absolute;
  bottom: 0;
  color: #999999;
  font-size: 24rpx;
}
