.card {
  height: 240rpx;
  background-color: white;
  border-radius: 5px;
  display: flex;
  position: relative;
}
.card-img {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-img > image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.card-data {
  width: 70%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.card-data > view:nth-child(1) {
  display: flex;
  height: 30px;
  align-items: center;
}
.card-teacher-name {

}
.card-teacher-label {
  color: var(--blue);
  font-size: 22rpx;
  font-weight: 500;
  margin-left: 20rpx;
}
.card-teacher-description {
  color: #a1a1a1;
  font-size: 20rpx;
}
.yueke {
  position: absolute;
  color: var(--blue);
  top: 0;
  right: 0;
  font-size: 20rpx;
  height: 32rpx;
  width: 70rpx;
  border-radius: 0px 5px 0px 5px;
  text-align: center;
  background-color: rgba(0, 110, 255, 0.15);
}