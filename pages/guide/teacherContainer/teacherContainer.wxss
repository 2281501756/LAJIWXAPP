.card {
  height: 240rpx;
  background-color: white;
  border-radius: 5px;
  display: flex;
  position: relative;
}
.card-img {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-img > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.card-data {
  width: 70%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.card-data > view:nth-child(1) {
  display: flex;
  height: 30px;
  align-items: center;
}
.card-teacher-name {
  font-size: 35rpx;
}
.card-teacher-label {
  color: var(--blue);
  font-size: 22rpx;
  font-weight: 500;
  margin-left: 20rpx;
}
.card-teacher-description {
  color: #a1a1a1;
  font-size: 24rpx;
}
.red-label {
  color: var(--blue);
  font-size: 24rpx;
  padding: 3rpx 12rpx;
  margin: 0 10rpx;
  border-radius: 10px;
  text-align: center;
  background-color: rgba(0, 110, 255, 0.15);
}
.custom-class {
  border-top: 0;
}
button {
  position: fixed;
  bottom: 0;
  width: 100%;
  color: white;
  background-color: var(--blue);
}